---
interface Props {
  count: number;
  dashed?: boolean;
}

const { count, dashed } = Astro.props;
---

<div class="flex items-center gap-2">
  {
    [...Array(count)].map((_, i) => (
      <span
        class={`inline-block ${
          i == 0 && dashed ? "w-12" : "w-2"
        } h-2 rounded-full bg-sea`}
      />
    ))
  }
</div>
