---
import { Image } from "astro:assets";
import neko from "@/assets/arrow2nd.svg";
import Dots from "@/components/Dots.astro";
import BaseLayout from "@/layouts/BaseLayout.astro";
import Header from "@/components/Header.astro";
---

<BaseLayout title="Oops!">
  <Header />
  <main>
    <div
      class="fixed top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 space-y-3"
    >
      <h1 class="font-bold text-3xl tracking-widest">Oops!</h1>
      <Dots count={4} dashed />
      <p>ページが見つかりませんでした 🐱</p>
    </div>
    <Image class="fixed right-0 bottom-0 w-48 md:w-64" src={neko} alt="ねこ" />
  </main>
</BaseLayout>
