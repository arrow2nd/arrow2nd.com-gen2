---
import { Image } from "@astrojs/image/components";

import neko from "@/assets/arrow2nd.svg";
import Dots from "@/components/Dots.astro";
import Link from "@/components/Link.astro";
import Layout from "@/layouts/Layout.astro";
---

<Layout title="Welcome to Astro.">
  <main>
    <div class="fixed top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 space-y-3">
      <h1 class="font-bold text-3xl tracking-widest">arrow2nd</h1>
      <Dots count={4} dashed />
      <div class="space-y-2">
        <Link href="/about" icon="fluent:animal-cat-16-regular" text="about" />
        <Link href="/category/all" icon="mdi:work-outline" text="works" />
      </div>
    </div>
    <Image class="fixed right-0 bottom-0 w-48 md:w-64" src={neko} alt="ねこ" />
  </main>
</Layout>
