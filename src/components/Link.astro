---
import { Icon } from "astro-icon";

export interface Props {
  href: string;
  icon: string;
  text: string;
  targetBlank?: boolean;
}

const { href, icon, text, targetBlank } = Astro.props;
---

<span class="flex items-center">
  <Icon class="w-5" name={icon} />
  <a
    class="ml-2 text-base tracking-widest hover:underline"
    href={href}
    target={targetBlank ? "_blank" : undefined}
    rel={targetBlank ? "noopener noreferrer" : undefined}>{text}</a
  >
</span>
