---
import type { Section } from "@/types/section";
import type { Link as WorkLink } from "@/types/work";
import Link from "./Link.astro";

export interface Props {
  contents: Section[];
  links?: WorkLink[];
}

const { contents, links } = Astro.props;
const existLinks = links && links.length > 0;
---

<div class="space-y-6">
  {
    contents.map(({ title, text }) => (
      <section>
        <h2 class="mb-1 font-bold text-xl">{title}</h2>
        {text.split("\n").map((line) => (
          <p>{line}</p>
        ))}
      </section>
    ))
  }
  {
    existLinks && (
      <section>
        <h2 class="mb-1 font-bold text-xl">外部リンク</h2>
        <div class="space-y-1">
          {links.map(({ href, icon, text }) => (
            <Link href={href} icon={`ri:${icon}`} text={text} targetBlank />
          ))}
        </div>
      </section>
    )
  }
</div>
